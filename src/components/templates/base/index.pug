doctype html
html(lang="en")
  head
    include /atoms/head/index
    <%= htmlWebpackPlugin.files.css.map((css) => `link(href=\'${css}\', class='main-style' rel='stylesheet')`).join('\n      ') %>
  body
      include ./layout
      //- Inject assets. 6 spaces is necessary, so that `HtmlWebpackPugPlugin` can translate this snippet to proper pug syntax.
      <%= htmlWebpackPlugin.files.js.map((js) => `script(src=\'${js}\', class='main-script' type='text/javascript', async)`).join('\n      ') %>
