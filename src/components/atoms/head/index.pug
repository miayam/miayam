head
  title #{title || site.title}
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  meta(name="description", content=`${description || site.description}`)

  //- PWA stuff
  link(rel="manifest", href="/manifest.webmanifest")
  link(rel="icon", href="/cropped-miayam-32x-32.png", sizes="32x32")
  link(rel="icon", href="/cropped-miayam-192x-192.png", sizes="192x192")
  link(rel="apple-touch-icon", href="/assets/image/logo-white-192.png")
  meta(name="theme-color", content="#fff")

  //- Open graph related
  meta(property="og:title", content=`${title || site.title}`)
  meta(property="og:type", content=`${type || site.type}`)
  meta(property="og:url", content=`${url || site.url}`)
  meta(property="og:image", content=`${image || site.image}`)
  meta(property="og:site_name", content=`${name || site.name}`)
  meta(property="og:description", content=`${description || site.description}`)
